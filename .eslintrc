{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "extends" : "airbnb",
    "rules": {
        "react/react-in-jsx-scope": "off",
        "linebreak-style": 0,
        "no-underscore-dangle": "off",
        "react/jsx-props-no-spreading": "off"
    }
}
